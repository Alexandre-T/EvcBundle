{
  "name": "alexandret/evc-bundle",
  "description": "Integration of EVC API in Symfony applications",
  "homepage": "https://github.com/Alexandre-T/EvcBundle",
  "type": "symfony-bundle",
  "license": " CECILL-B",
  "authors": [
    {
      "name": "Alexandre Tranchant",
      "email": "alexandre.tranchant@gmail.com"
    }
  ],
  "support": {
    "email": "Alexandre.Tranchant@gmail.com",
    "issues": "https://github.com/Alexandre-T/casguard/issues",
    "source": "https://github.com/Alexandre-T/casguard"
  },
  "require": {
    "php": "^7.2",
    "symfony/config": "^4.4",
    "symfony/dependency-injection": "^4.4",
    "symfony/http-kernel": "^4.4",
    "symfony/yaml": "^4.4",
    "mashape/unirest-php": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Alexandre\\Evc\\": ""
    }
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^4.4",
    "phpunit/phpunit": "^8.5",
    "symfony/debug": "^4.4",
    "codeception/aspect-mock": "^3.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "scripts": {
    "phpcs": "phpcs src --standard=phpcs.xml -s",
    "phpcsfixer": "php-cs-fixer fix src --config=.php_cs.dist --allow-risky yes",
    "phpmd": "phpmd src/ xml phpmd.xml",
    "phpcs-test": "phpcs tests --standard=phpcs-test.xml -s",
    "phpcsfixer-test": "php-cs-fixer fix tests --config=.php_cs.dist --allow-risky yes",
    "phpmd-test": "phpmd  tests/ xml phpmd-test.xml --suffixes php --exclude _generated"
  }
}